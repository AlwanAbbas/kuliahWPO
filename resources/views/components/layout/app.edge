<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    @vite(['resources/css/app.css', 'resources/js/app.js'])
    <title>{{ title }}</title>
  </head>
  <body class="min-h-screen bg-gray-100 font-sans">
    <header class="flex flex-wrap sm:justify-start sm:flex-nowrap w-full bg-white text-sm py-3 shadow-md dark:bg-neutral-800">
      <nav class="max-w-[85rem] w-full mx-auto px-4 sm:flex sm:items-center sm:justify-between">
        <!-- Brand logo & text -->
        <a class="flex items-center gap-2 font-semibold text-xl text-black hover:opacity-80 transition-all dark:text-white" href="/" aria-label="Brand">
          <img src="/icons/Alpha Nexus.png" alt="Alpha Nexus Logo" class="w-8 h-8 object-contain" />
          ALPHA NEXUS
        </a>

        <!-- Right side (auth links or user info) -->
        <div class="flex flex-row items-center gap-5 mt-5 sm:justify-end sm:mt-0 sm:ps-5">
          @eval(await auth.check())
          @if(auth.isAutenticated)
            <div>{{ auth.user.name }}</div>
            <form action="/logout?_method=DELETE" method="post">
              {{ csrfField() }}
              <button class="text-gray-600 font-medium hover:text-gray-400">Log out</button>
            </form>
          @else
            <a href="/login" class="text-gray-600 font-medium hover:text-gray-400">Log in</a>
            <a href="/register" class="text-gray-600 font-medium hover:text-gray-400">Register</a>
          @end
        </div>
      </nav>
    </header>

    <main class="grow">
      {{{ await $slots.main() }}}
    </main>
  </body>
</html>
